<section class="columns">
<div class="column">
  <form class="box">
    <h2 class="title">Edit Post</h2>
    <div class="field">
      <label class="label">Title</label>
      <div class="control">
        <input class="input" type="text" id="post-title" value={{blog.title}}>
      </div>
    </div>
  
    <div class="field">
      <label class="label">Content</label>
      <div class="control">
        <textarea class="textarea" type="text" id="post-content">{{blog.content}}</textarea>
      </div>
    </div>

    <button type="submit" class="button is-primary" id="submit" data-id={{blog.id}}>Update Post</button>
  </form>
</div>
</section>

<script src="/js/updatepost.js"></script>